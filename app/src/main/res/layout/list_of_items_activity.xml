<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".main_activities.ListOfMyItems">

    <ListView
        android:padding="25dp"
        android:id="@+id/lv_list_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorBackground"
        android:divider="@color/black"
        android:dividerHeight="2px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="25dp"
        android:paddingHorizontal="25dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:background="@color/colorBackground">

        <Button
            android:theme="@style/ButtonTheme"
            android:id="@+id/bth_back_from_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="@string/end_list" />

        <Button
            android:theme="@style/MainButtonTheme"
            android:id="@+id/bth_new_adv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginLeft="16dp"
            android:background="@drawable/button_main_shape"
            android:text="Добавить" />

    </LinearLayout>


</LinearLayout>